{
    "useTabs": true,
    "tabWidth": 4,
    "semi": true,
    "singleQuote": true,
    "bracketSpacing": true,
    "trailingComma": "none",
    "overrides": [
        {
            "files": "*.md",
            "options": {
                "useTabs": false,
                "trailingComma": "none",
                "arrowParens": "avoid",
                "proseWrap": "never"
            }
        },
        {
            "files": "*.{json,babelrc,eslintrc,remarkrc,prettierrc}",
            "options": {
                "useTabs": false
            }
        }
    ]
}
